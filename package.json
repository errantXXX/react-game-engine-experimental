{
  "name": "super-market",
  "version": "1.0.0",
  "description": "Web Game",
  "bin": {
    "start": "./bin/server"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "development": "npm-run-all --parallel build-client-development build-server-development build-webworker-development server-development",
    "server-development": "SERVER_ENV=development nodemon ./bin/server.js --watch ./build/debug/server",
    "build-client-development": "WEBPACK_ENV=development webpack --config config/webpack.client.config.js --watch",
    "build-webworker-development": "WEBPACK_ENV=development webpack --config config/webpack.webworker.config.js --watch",
    "build-server-development": "WEBPACK_ENV=development webpack --config config/webpack.server.config.js --watch"
  },
  "author": "",
  "private": true,
  "dependencies": {
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-register": "^6.24.0",
    "file-loader": "^0.10.1",
    "koa": "^2.2.0",
    "koa-router": "^5.4.0",
    "koa-static": "^3.0.0",
    "mobx": "^3.1.7",
    "mobx-react": "^4.1.3",
    "raw-loader": "^0.5.1"
  },
  "devDependencies": {
    "babel-preset-stage-2": "^6.24.0",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "webpack": "^2.2.1",
    "worker-loader": "^0.8.0"
  }
}
